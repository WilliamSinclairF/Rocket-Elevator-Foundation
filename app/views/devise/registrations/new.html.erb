<section>
  <div class="container">
    <div class="text-center">
      <div class="m-20">
        <img  src="https://raw.githubusercontent.com/WilliamSinclairF/RocketElevatorsDigitalPresence-frontend/master/src/assets/RE_assets/RE_logo.png" alt=""  height="300">
      </div>
      <div class="m-20">
        <h1 class="text-blue fw-300">Sign Up</h1>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <form class="form-signin d-flex justify-content-center flex-wrap">
        <div class="w-100p m-5">
          <%= f.label :email, class: "text-center fs-30"%>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-75p ml-auto mr-auto" %>
        </div>
        <div class="w-100p m-5">
          <%= f.label :password, class: "text-center fs-30"%>
          <% if @minimum_password_length %>
            <div class="text-center">
              <span class="text-center text-blue">(<%= @minimum_password_length %> characters minimum)</span>
            </div>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control w-75p ml-auto mr-auto" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, class: "text-center fs-30"%>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control w-75p ml-auto mr-auto" %>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.submit "Sign Up", class: "btn btn-lg btn-primary btn-block w-50p" %>
        </div>
      </form>
      <div class="text-center m-20">
        <span>Already signed up? </span>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</section>
