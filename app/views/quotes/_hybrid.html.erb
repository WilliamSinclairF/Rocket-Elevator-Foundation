<%= simple_form_for(@quote) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="container">
    <div class="form-inputs row text-center">
      <%= f.input :floors, input_html: {id: "floors"}, :onkeydown => 'return event.keyCode !== 69 && event.keyCode !== 189' %>
      <%= f.input :basements, input_html: {id: "basements"}, :onkeydown => 'return event.keyCode !== 69 && event.keyCode !== 189' %>
      <%= f.input :businesses, :onkeydown => 'return event.keyCode !== 69 && event.keyCode !== 189' %>
      <%= f.input :parking_spaces, :onkeydown => 'return event.keyCode !== 69 && event.keyCode !== 189' %>
      <%= f.input :occupants, input_html: {id: "occupants"}, :onkeydown => 'return event.keyCode !== 69 && event.keyCode !== 189' %>
      <%= f.input :opening_hours, collection: 1..24 , :onkeydown => 'return event.keyCode !== 69 && event.keyCode !== 189' %>
    </div>
    <div class="form-inputs row">
      <%= f.input :product_line, as: :radio_buttons, collection: [['0', 'Standard'], ['1', 'Premium'], ['2', 'Excelium']], label_method: :second, value_method: :first %>
    </div>
    <%= f.hidden_field :total_price %>
    <div class="form-actions text-center">
      <%= f.button :submit, class: "btn btn-lg btn-red" %>
      <input type="reset" class="btn btn-lg btn-default">
      <hr />
      <%= render 'quoteinfo' %>
    </div>
  </div>
<% end %>
